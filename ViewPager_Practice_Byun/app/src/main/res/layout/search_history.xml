<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="40dp"
    android:layout_marginLeft="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    >

    <ImageView
        android:id="@+id/news_icon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/naver_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/news_naver"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        app:layout_constraintRight_toLeftOf="@id/news_icon"
        app:layout_constraintTop_toTopOf="parent"
        android:text="NAVER"
        android:textColor="@color/naver"
        android:textSize="16dp"
        android:layout_marginRight="16dp"
        />

    <TextView
        android:id="@+id/news_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"

        android:background="@drawable/myword_top_rounded"

        app:layout_constraintRight_toLeftOf="@id/news_icon"
        app:layout_constraintTop_toBottomOf="@id/news_naver"
        >
    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>