<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.AddUserActivity">

    <TextView
            android:id="@+id/user_id_info"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:text="User ID"
            android:gravity="center"
            android:textSize="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/user_name_input"
            app:layout_constraintTop_toTopOf="parent"
            />
    <EditText
            android:id="@+id/user_id_input"
            android:layout_width="200dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toRightOf="@id/user_name_info"
            app:layout_constraintRight_toRightOf="parent"
            android:hint="유저 아이디를 입력하세요"
            app:layout_constraintTop_toTopOf="@id/user_id_info"
            />
    <TextView
            android:id="@+id/user_name_info"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:text="User Name"
            android:gravity="center"
            android:textSize="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/user_name_input"
            app:layout_constraintTop_toBottomOf="@id/user_id_info"
        />
    <EditText
            android:id="@+id/user_name_input"
            android:layout_width="200dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toRightOf="@id/user_name_info"
            app:layout_constraintRight_toRightOf="parent"
            android:hint="유저 이름을 입력하세요"
            app:layout_constraintTop_toTopOf="@id/user_name_info"
        />
    <TextView
            android:id="@+id/user_mail_info"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:text="User Mail"
            android:gravity="center"
            android:textSize="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/user_name_input"
            app:layout_constraintTop_toBottomOf="@id/user_name_info"
            />
    <EditText
            android:id="@+id/user_category_input"
            android:layout_width="200dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toRightOf="@id/user_name_info"
            app:layout_constraintRight_toRightOf="parent"
            android:hint="유저 메일을 입력하세요"
            app:layout_constraintTop_toTopOf="@id/user_mail_info"
            />

    <TextView
            android:id="@+id/add_user"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:text="Add User"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="#abcdef"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
