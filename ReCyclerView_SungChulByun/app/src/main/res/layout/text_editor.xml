<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/text_editor"
    android:background="#A6000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/text_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/double_rounded_50"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >
        <ImageView
            android:id="@+id/create_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintLeft_toLeftOf="@id/text_box"
            app:layout_constraintRight_toLeftOf="@id/file_edit"
            app:layout_constraintTop_toTopOf="@id/text_box"
            app:layout_constraintBottom_toTopOf="@id/naming_content"
            android:src="@drawable/create_txt"

            android:layout_marginTop="8dp"

            />
        <EditText
            android:id="@+id/file_edit"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:hint="폴더 이름을 입력하세요."
            android:background="@drawable/double_rounded_20"
            app:layout_constraintRight_toRightOf="@id/text_box"
            app:layout_constraintLeft_toRightOf="@+id/create_image"

            app:layout_constraintTop_toTopOf="@id/create_image"
            app:layout_constraintBottom_toBottomOf="@id/create_image"
            android:inputType="text"
            android:maxLines="1"
            android:layout_margin="8dp"
            />

        <EditText
            android:id="@+id/naming_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/file_edit"
            app:layout_constraintBottom_toTopOf="@id/file_cancel"
            android:gravity="left|top"
            android:inputType="text"
            android:background="@drawable/double_rounded_20"
            android:layout_margin="8dp"
            />

        <TextView
            android:id="@+id/file_finish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="생성"

            app:layout_constraintRight_toRightOf="@id/text_box"
            app:layout_constraintLeft_toRightOf="@+id/file_cancel"

            app:layout_constraintTop_toTopOf="@id/file_cancel"
            app:layout_constraintBottom_toBottomOf="@id/file_cancel"

            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="24dp"


            />

        <TextView
            android:id="@+id/file_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="취소"
            app:layout_constraintRight_toLeftOf="@id/file_finish"
            app:layout_constraintLeft_toLeftOf="@id/text_box"

            app:layout_constraintTop_toBottomOf="@id/naming_content"
            app:layout_constraintBottom_toBottomOf="parent"

            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="24dp"
            android:layout_margin="16dp"

            />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:src="#777777"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/file_cancel"
            app:layout_constraintBottom_toBottomOf="@id/file_cancel"

            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>