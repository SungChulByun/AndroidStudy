<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/city_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/city_patient"
        android:gravity="center"
        android:textSize="24dp"
        />

    <TextView
        android:id="@+id/city_patient"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toRightOf="@id/city_name"
        app:layout_constraintRight_toLeftOf="@id/city_death"
        android:gravity="center"
        android:textColor="@color/W_yellow"
        android:textSize="24dp"
        />

    <TextView
        android:id="@+id/city_death"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toRightOf="@id/city_patient"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:textColor="@color/D_red"
        android:textSize="24dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>